# A complete MakeFile
CC=gcc
SRC=main.c holberton.c
OBJ=$(patsubst .c, .o, $(SRC))
NAME=holberton
RM=
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
ifneq ("$(wildcard *.h)","")
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)
endif

clean:
	$(RM) *~ $(NAME)

oclean:
ifneq ("$(wildcard $(OBJ))", "")
	$(RM) $(OBJ)
endif

fclean:  clean oclean

re: fclean all
